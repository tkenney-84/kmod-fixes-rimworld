<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <TerrainDef>
    <defName>HeavyBridge</defName>
    <label>heavy bridge</label>
    <description>A flat metallic surface on supportive beams which can be built over water. Heavy bridges are fireproof and can support heavier structures, but be careful - bridges are fragile. If a bridge falls, buildings on top of it fall as well.</description>
    <texturePath>Terrain/Surfaces/heavy_bridge</texturePath>
    <uiIconPath>Terrain/Surfaces/heavy_bridge_menu_icon</uiIconPath>
    <layerable>true</layerable>
    <bridge>true</bridge>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
    </affordances>
    <designationCategory>Structure</designationCategory>
    <fertility>0</fertility>
    <constructEffect>ConstructMetal</constructEffect>
    <terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
    <edgeType>Hard</edgeType>
    <renderPrecedence>400</renderPrecedence>
    <autoRebuildable>true</autoRebuildable>
    <statBases>
      <WorkToBuild>1500</WorkToBuild>
      <Flammability>0.0</Flammability>
    </statBases>
    <costList>
      <Steel>12</Steel>
    </costList>
    <tags>
      <li>Floor</li>
    </tags>
    <designationHotKey>Misc4</designationHotKey>
    <destroyOnBombDamageThreshold>50</destroyOnBombDamageThreshold>
    <destroyBuildingsOnDestroyed>true</destroyBuildingsOnDestroyed>
    <destroyEffect>Bridge_Collapse</destroyEffect>
    <destroyEffectWater>Bridge_CollapseWater</destroyEffectWater>
  </TerrainDef>
</Defs>
